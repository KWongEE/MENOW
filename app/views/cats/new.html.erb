<% if @cat.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@cat.errors.count, "error") %> prohibited this cat from being saved:</h2>
  <ul>
    <% @cat.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h1>New Cat Form</h1>
<div class="cat-form">
<%= form_for @cat, html: { multipart: true } do |f| %>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</div>

<div class="field">
  <%= f.label :location %><br />
  <%= f.text_area :location %>
</div>

<div class="field">
  <%=f.label :image %>
  <%=f.file_field :image %>
 </div>


<div class="actions">
  <%= f.submit 'Add Cat', class: "btn btn-primary"%>
</div>
<% end %>
</div>
